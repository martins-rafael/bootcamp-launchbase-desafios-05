{% extends 'layout.njk' %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover; border-radius: 4px 0 0 4px;"></section>
        <section class="details">
            <h3>Detalhes</h3>
            <div class="item-wraper">
                <div class="item">
                    <div>Professor</div>
                    <div>{{teacher.name}}</div>
                </div>
                <div class="item">
                    <div>Idade</div>
                    <div>{{teacher.age}} anos</div>
                </div>
                <div class="item">
                    <div>Grau de escolaridade</div>
                    <div>{{teacher.education_level}}</div>
                </div>
                <div class="item">
                    <div>Tipo de Aula</div>
                    <div>{{teacher.class_type}}</div>
                </div>
                <div class="item">
                    <div>Acompanhamento</div>
                    <div>
                        {% for subject in teacher.subjects_taught %}
                            <span>{{subject}}</span>
                        {% endfor %}
                    </div>
                </div>
                <div class="item">
                    <div>Desde</div>
                    <div>{{teacher.created_at}}</div>
                </div>
                <a href="/teachers/{{teacher.id}}/edit" class="button">Editar</a>
            </div>
        </section>
    </div>
{% endblock content %}
{% extends 'layout.njk' %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background: url({{student.avatar_url}}) no-repeat center center / cover; border-radius: 4px 0 0 4px;"></section>
        <section class="details">
            <h3>Detalhes</h3>
            <div class="item-wraper">
                <div class="item">
                    <div>Aluno(a)</div>
                    <div>{{student.name}}</div>
                </div>
                <div class="item">
                    <div>Email</div>
                    <div>{{student.email}}</div>
                </div>
                <div class="item">
                    <div>Aniversário</div>
                    <div>{{student.birth_date}}</div>
                </div>
                <div class="item">
                    <div>Ano escolar</div>
                    <div>{{student.education_level}}</div>
                </div>
                <div class="item">
                    <div>Carga horária semanal</div>
                    <div>{{student.weekly_classes}}
                        horas</div>
                </div>
                <div class="item">
                    <div>Professor</div>
                    <div>{{student.teacher_name}}</div>
                </div>
                <a href="/students/{{student.id}}/edit" class="button">Editar</a>
            </div>
        </section>
    </div>
{% endblock content %}